<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Title -->
    <EditText
        android:id="@+id/event_title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="@string/event_title_hint"
        android:inputType="textCapWords"
        android:layout_marginTop="16dip"
        android:minHeight="48dip"
        />

    <!-- Location -->
    <LinearLayout
        android:id="@+id/event_location_row"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dip" >
        <EditText
            android:id="@+id/event_location"
            android:hint="@string/event_location_hint"
            android:inputType="textPostalAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!-- Date and Time -->
    <!-- From -->
    <LinearLayout
        android:id="@+id/event_time_from_row"
        android:orientation="vertical"
        android:layout_marginTop="16dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="64dip" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/event_time_from_label"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/event_time_from_date"
                android:layout_width="0px"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:singleLine="true" />
            <Button
                android:id="@+id/event_time_from_time"
                android:layout_width="0px"
                android:layout_weight="4"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <!-- To -->
    <LinearLayout
        android:id="@+id/event_time_to_row"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="64dip" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/event_time_to_label"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/event_time_to_date"
                android:layout_width="0px"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:singleLine="true" />
            <Button
                android:id="@+id/event_time_to_time"
                android:layout_width="0px"
                android:layout_weight="4"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <!-- Description -->
    <EditText
        android:id="@+id/event_description"
        android:minLines="4"
        android:hint="@string/event_description_hint"
        android:gravity="top"
        android:inputType="textAutoCorrect|textMultiLine|textCapSentences"
        android:layout_marginTop="16dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/map_container"
android:layout_width="match_parent"
android:layout_height="match_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.cse403.matchonthestreet.MapsActivity"
        tools:layout="@layout/abc_action_bar_title_item" />

    <!-- The search bar and search button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:background="#FFFFFF" >

        <EditText
            android:id="@+id/map_search_bar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:contextClickable="true"
            android:editable="true"
            android:enabled="true"
            android:hint="Search"
            android:layout_weight="1"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="onSearch"
            android:src="@android:drawable/ic_menu_search"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_update_location"
            android:layout_width="@dimen/fab_button_diameter"
            android:layout_height="@dimen/fab_button_diameter"
            android:src="@android:drawable/ic_menu_compass"
            android:tint="@android:color/white"
            android:layout_margin="10dp"
            android:layout_gravity="bottom|start"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_add_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_input_add"
            android:layout_margin="10dp"
            android:layout_gravity="bottom|start"/>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_map_to_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_map_to_list"
            android:layout_margin="10dp"
            android:layout_gravity="bottom|start"
            />

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="150dp">
        </FrameLayout>

    </LinearLayout>



</RelativeLayout>